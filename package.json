{
  "name": "xss-validator-playwright",
  "version": "1.0.0",
  "main": "xssValidator.js",
  "bin": {
    "xss-validator": "./cli.js"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "install-cli": "npm link",
    "webui": "node webui/server.js",
    "postinstall": "node scripts/install-browsers.js",
    "setup": "npx playwright install --with-deps",
    "setup:chromium": "npx playwright install --with-deps chromium",
    "setup:firefox": "npx playwright install --with-deps firefox",
    "setup:webkit": "npx playwright install --with-deps webkit",
    "burp": "node start-burp-suite-server.js",
    "burp-server": "node start-burp-server.js",
    "burp-server:v2": "node start-burp-server-v2.js",
    "burp-server:legacy": "node start-burp-server.js",
    "dev": "node start-burp-server-v2.js --debug",
    "start": "node start-burp-server-v2.js",
    "status": "node start-burp-server-v2.js status",
    "test:burp": "node start-burp-server-v2.js test",
    "logs": "node start-burp-server-v2.js logs"
  },
  "keywords": [
    "xss",
    "security",
    "testing",
    "playwright",
    "vulnerability"
  ],
  "author": "",
  "license": "ISC",
  "description": "A tool for detecting XSS vulnerabilities using Playwright",
  "dependencies": {
    "axios": "^1.6.2",
    "base64-js": "^1.5.1",
    "commander": "^11.1.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "playwright": "^1.40.1",
    "socket.io": "^4.7.4",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "rate-limiter-flexible": "^4.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-playwright-preset": "^3.0.1",
    "mock-fs": "^5.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/unit/**/*.test.js",
      "**/tests/integration/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "*.js",
      "config/**/*.js",
      "payloads/**/*.js",
      "reports/**/*.js",
      "!**/node_modules/**",
      "!**/tests/**"
    ]
  }
}
